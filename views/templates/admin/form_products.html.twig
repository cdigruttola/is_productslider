<label class="form-control-label">{{ 'Products'|trans({}, 'Admin.Global') }}</label>
<div id="related-product" class="col-sm input-container">
    <div id="related-content" class="row {{ form.vars.value == null or form.vars.value.data|length == 0 ? 'hide':'' }}">
        <fieldset>
            {{ form_widget(form) }}
        </fieldset>
        <fieldset>
            <a class="btn tooltip-link delete pl-0 pr-0" id="reset_related_product"><i class="material-icons">delete</i></a>
        </fieldset>
        <button type="button"
                class="btn btn-outline-primary sensitive open {{ form.vars.value != null and form.vars.value.data|length > 0 ? 'hide':'' }}"
                id="add-related-product-button">
            <i class="material-icons">add_circle</i> {{ 'Add a product'|trans({}, 'Admin.Catalog.Feature') }}
        </button>
    </div>
</div>